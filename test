<body>
  <h1>üéÅ Cek Kupon Mystery Box üéÅ</h1>

  <input type="text" id="idInput" placeholder="Masukkan ID" />
  <br />
  <input type="text" id="kuponInput" placeholder="Masukkan Kode Kupon" />
  <br />
  <button onclick="cekKupon()">Cek Kupon</button>

  <p id="hasil">Masukkan ID dan kode kupon di atas</p>

  <script>
    async function cekKupon() {
      const id = document.getElementById("idInput").value.trim().toUpperCase();
      const kupon = document.getElementById("kuponInput").value.trim().toUpperCase();
      const hasil = document.getElementById("hasil");

      if (!id || !kupon) {
        hasil.textContent = "Mohon isi kedua kolom.";
        hasil.style.color = "orange";
        return;
      }

      try {
        const response = await fetch("https://script.google.com/macros/s/AKfycbz18VrmRMZgmFiukKbJveShsJdynNa9SeFpae_CgRur1_jIRwbDQGWQJ6uL9IJhbiLO/exec");
        const data = await response.json();

        let status = "‚ùå Kupon tidak ditemukan.";
        hasil.style.color = "red";

        for (let i = 1; i < data.length; i++) {
          const sheetId = String(data[i][0]).toUpperCase();
          const sheetKupon = String(data[i][1]).toUpperCase();
          const statusKupon = String(data[i][2]).toLowerCase();

          if (sheetId === id && sheetKupon === kupon) {
            if (statusKupon === "belum") {
              status = "‚úÖ Kupon VALID dan BELUM digunakan!";
              hasil.style.color = "green";
            } else {
              status = "‚ö†Ô∏è Kupon SUDAH digunakan.";
              hasil.style.color = "orange";
            }
            break;
          }
        }

        hasil.textContent = status;

      } catch (error) {
        console.error("Error:", error);
        hasil.textContent = "‚ö†Ô∏è Gagal mengambil data. Periksa koneksi.";
        hasil.style.color = "red";
      }
    }
  </script>
</body>
